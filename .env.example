# CatChess Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Backend Configuration
# ============================================

# Server port
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4173

# WebSocket port (if different from HTTP)
WS_PORT=3001

# ============================================
# Frontend Configuration (Vite)
# ============================================

# API endpoint URL
VITE_API_URL=http://localhost:3001

# WebSocket URL
VITE_WS_URL=ws://localhost:3001

# Stockfish worker URL (optional, defaults to CDN)
# VITE_STOCKFISH_URL=/stockfish.js

# Enable development features
VITE_DEV_MODE=true

# ============================================
# Cloudflare Configuration
# ============================================

# Cloudflare Account ID
# CLOUDFLARE_ACCOUNT_ID=your-account-id

# Cloudflare API Token
# CLOUDFLARE_API_TOKEN=your-api-token

# D1 Database ID for chess rooms (replaces KV)
# D1_DATABASE_ID=your-d1-database-id
# D1_DATABASE_NAME=catchess-db

# Durable Objects namespace
# DO_NAMESPACE=CHESS_ROOM

# Workers domain
# WORKERS_DOMAIN=your-worker.workers.dev

# ============================================
# Database (if using)
# ============================================

# Database URL (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/catchess

# Redis URL (for session storage, future use)
# REDIS_URL=redis://localhost:6379

# ============================================
# Chess Engine Configuration
# ============================================

# Stockfish maximum depth
STOCKFISH_MAX_DEPTH=20

# Stockfish maximum skill level
STOCKFISH_MAX_SKILL=20

# Enable server-side analysis
ENABLE_SERVER_ANALYSIS=false

# ============================================
# Features Flags
# ============================================

# Enable online multiplayer
ENABLE_ONLINE_PLAY=true

# Enable PGN analysis
ENABLE_PGN_ANALYSIS=true

# Enable chat in online games
ENABLE_CHAT=true

# Maximum rooms per IP (rate limiting)
MAX_ROOMS_PER_IP=5

# Room expiration time (milliseconds)
ROOM_EXPIRATION_TIME=3600000

# ============================================
# Logging & Monitoring
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Sentry DSN (error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Analytics ID (Google Analytics, etc.)
# ANALYTICS_ID=UA-XXXXXXXXX-X

# ============================================
# Security
# ============================================

# JWT secret (for future auth)
# JWT_SECRET=your-super-secret-key

# Session secret
# SESSION_SECRET=your-session-secret

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Rate limit: requests per window
RATE_LIMIT_MAX=100

# Rate limit: window duration (ms)
RATE_LIMIT_WINDOW=60000

# ============================================
# Development
# ============================================

# Enable debug mode
DEBUG=false

# Pretty print JSON responses
PRETTY_JSON=true

# Enable source maps in production
ENABLE_SOURCE_MAPS=false
